# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password
DB_NAME=ecommerce_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-should-be-very-long-and-random
JWT_ACCESS_TOKEN_EXPIRES_IN=24h
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
PASSWORD_RESET_TOKEN_EXPIRES_IN=1h

# Security Configuration
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Rate Limiting Configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Application Configuration
PORT=3001
NODE_ENV=development

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# OAuth2 Gmail Configuration (for password reset and notifications)
EMAIL_FROM=noreply@mensfashionstore.com
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
FRONTEND_URL=http://localhost:3000

# VNPAY Configuration
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_TMN_CODE=your_tmn_code
VNPAY_HASH_SECRET=your_hash_secret
VNPAY_RETURN_URL=https://your-frontend-url.com/checkout/payment/result/vnpay
VNPAY_IPN_URL=https://your-backend-url.com/webhooks/vnpay/ipn

# Webhook Alert Configuration
WEBHOOK_ALERTS_EMAIL_ENABLED=true
WEBHOOK_ALERTS_EMAIL_RECIPIENTS=admin@example.com,alerts@example.com

# Webhook Monitoring Thresholds
WEBHOOK_ERROR_RATE_THRESHOLD=10
WEBHOOK_PROCESSING_TIME_THRESHOLD=5000
WEBHOOK_CONSECUTIVE_FAILURES_THRESHOLD=5

# Webhook Data Retention
WEBHOOK_RETENTION_DAYS=30

# GHN Shipping Configuration
GHN_API_URL=https://dev-online-gateway.ghn.vn/shiip/public-api
GHN_TOKEN=your_ghn_token
GHN_SHOP_ID=your_ghn_shop_id
GHN_WEBHOOK_SECRET=your_ghn_webhook_secret

# GHN Shop Location
GHN_FROM_DISTRICT_ID=your_district_id
GHN_FROM_WARD_CODE=your_ward_code
GHN_RETURN_PHONE=your_return_phone
GHN_RETURN_ADDRESS=your_shop_address
